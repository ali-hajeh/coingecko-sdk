{
  "compilerOptions": {
    "outDir": "./dist", // Output directory for compiled files
    "declaration": true, // Generate corresponding '.d.ts' files
    "declarationMap": true, // Create source maps for '.d.ts' files
    "rootDir": "./src", // Root directory of source files
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es6", // Set target JavaScript version
    "module": "commonjs" // Set module system
  },
  "include": ["src/**/*"], // Include source files
  "exclude": ["node_modules", "dist"] // Exclude these directories from compilation
}
